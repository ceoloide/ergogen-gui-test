{
  "name": "ergogen-gui",
  "version": "0.4.0",
  "description": "A web-based GUI for Ergogen, the keyboard layout generator.",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@jscad/csg": "0.7.0",
    "@jscad/stl-serializer": "0.1.3",
    "@monaco-editor/react": "^4.6.0",
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.0",
    "ergogen": "ceoloide/ergogen#bezier",
    "file-saver": "^2.0.5",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-panzoom": "^0.4.4",
    "react-hotkeys-hook": "^5.1.0",
    "react-router-dom": "^7.9.3",
    "react-scripts": "5.0.1",
    "react-split": "^2.0.14",
    "react-use": "^17.5.0",
    "styled-components": "^6.1.8",
    "three": "^0.180.0",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build-ergogen": "./patch/patch_ergogen.sh && cd node_modules/ergogen && npm install && npm run build && cp dist/ergogen.js ../../public/dependencies/ergogen.js",
    "postinstall": "yarn run build-ergogen",
    "start": "react-scripts --openssl-legacy-provider start",
    "build": "react-scripts --openssl-legacy-provider build",
    "postbuild": "yarn run build-ergogen",
    "test:unit": "CI=true react-scripts --openssl-legacy-provider test --env=jsdom",
    "test:e2e": "CI=true playwright test",
    "test": "yarn test:unit && yarn test:e2e",
    "eject": "react-scripts eject",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "format": "prettier --write \"*.{js,ts,json,md}\" \"{src,e2e,patch}/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint:js": "eslint --fix \"{src,e2e,patch}/**/*.{ts,tsx,js,jsx}\"",
    "lint:md": "markdownlint --fix \"**/*.md\"",
    "lint": "yarn lint:md && yarn lint:js && yarn knip",
    "precommit": "yarn format && yarn lint && yarn test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/jszip": "^3.4.1",
    "@types/lodash-es": "^4.17.12",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.2.0",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.2.0-canary-4fdf7cf2-20251003",
    "gh-pages": "^6.1.1",
    "globals": "^16.4.0",
    "knip": "^5.64.1",
    "markdownlint": "^0.38.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "three-stdlib": "^2.36.0",
    "typescript-eslint": "^8.45.0"
  },
  "knip": {
    "ignore": [
      "patch/**",
      "public/**"
    ]
  }
}
